<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/LayoutContacts"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#DAB894"
    android:orientation="vertical"
    tools:context=".bdContacts">

    <LinearLayout
        android:id="@+id/LayoutResearch"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/txtResearchContact"
            android:layout_width="261dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:ems="10"
            android:inputType="textPersonName"
            android:paddingLeft="10dp"
            android:text="Contacts" />

        <ImageButton
            android:id="@+id/btnResearch"
            android:layout_width="169dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:tint="#0E1C36"
            app:srcCompat="@android:drawable/ic_menu_search" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:orientation="horizontal"></LinearLayout>

    <LinearLayout
        android:id="@+id/LayoutData"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#DAB894"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/LayoutId"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#FFCAAF"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView"
                android:layout_width="70dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="#DAB894"
                android:paddingLeft="10dp"
                android:text="ID"
                android:textColor="#0E1C36"
                android:textSize="20sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/txtID"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:ems="10"
                android:inputType="textPersonName" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/LayoutName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#FFCAAF"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView2"
                android:layout_width="70dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="#DAB894"
                android:paddingLeft="10dp"
                android:text="Nom"
                android:textColor="#0E1C36"
                android:textSize="20sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/txtName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:ems="10"
                android:inputType="textPersonName" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/LayoutAddress"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#FFCAAF"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView3"
                android:layout_width="70dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="#DAB894"
                android:paddingLeft="10dp"
                android:text="Adresse"
                android:textColor="#0E1C36"
                android:textSize="20sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/txtAddress"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:ems="10"
                android:inputType="textPersonName" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/LayoutTel1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#FFCAAF"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView4"
                android:layout_width="70dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="#DAB894"
                android:paddingLeft="10dp"
                android:text="Numéro 1"
                android:textColor="#0E1C36"
                android:textSize="20sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/txtTel1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:ems="10"
                android:inputType="phone" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/LayoutTel2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#FFCAAF"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView5"
                android:layout_width="70dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="#DAB894"
                android:paddingLeft="10dp"
                android:text="Numéro 2"
                android:textColor="#0E1C36"
                android:textSize="20sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/txtTel2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:ems="10"
                android:inputType="phone" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/LayoutCompany"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#FFCAAF"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView6"
                android:layout_width="70dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="#DAB894"
                android:paddingLeft="10dp"
                android:text="Entreprise"
                android:textColor="#0E1C36"
                android:textSize="20sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/txtCompany"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:ems="10"
                android:inputType="textPersonName" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/LayoutNavigation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btnPrevious"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:padding="10dp"
            android:text="Précédent"
            android:textColor="#0E1C36"
            android:textSize="14sp"
            app:backgroundTint="#C6E2E9" />

        <Button
            android:id="@+id/btnNext"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:lineSpacingExtra="24sp"
            android:padding="10dp"
            android:text="Suivant"
            android:textColor="#0E1C36"
            android:textSize="14sp"
            app:backgroundTint="#C6E2E9" />

        <Button
            android:id="@+id/btnCall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:lineSpacingExtra="24sp"
            android:padding="10dp"
            android:text="Appeler"
            android:textColor="#000E1C"
            android:textSize="14sp"
            app:backgroundTint="#C6E2E9" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal">

    </LinearLayout>

    <LinearLayout
        android:id="@+id/LayoutNav2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btnAdd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Ajouter"
            android:textColor="#0E1C36"
            android:textSize="14sp"
            app:backgroundTint="#C6E2E9" />

        <Button
            android:id="@+id/btnUpdate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Modifier"
            android:textColor="#0E1C36"
            android:textSize="14sp"
            app:backgroundTint="#C6E2E9" />

        <Button
            android:id="@+id/btnDelete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Supprimer"
            android:textColor="#0E1C36"
            android:textSize="14sp"
            app:backgroundTint="#C6E2E9" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"></LinearLayout>

    <LinearLayout
        android:id="@+id/LayoutSave"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btnCancel"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="Annuler"
            android:textColor="#101010"
            app:backgroundTint="#C6E2E9"
            app:iconTint="#040303" />

        <Button
            android:id="@+id/btnSave"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Sauvegarder"
            android:textColor="#101010"
            app:backgroundTint="#C6E2E9"
            app:iconTint="#FFFFFF" />
    </LinearLayout>
</LinearLayout>